<?xml version="1.0" encoding="utf-8"?>
<com.young.library.base.view.CommonHeaderView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/teacher_common_header_view"
    android:layout_width="match_parent"
    android:layout_height="52dip"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/teacher_common_header_title_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginLeft="60dip"
            android:layout_marginRight="60dip"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/teacher_common_header_center_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:drawablePadding="5dip"
                android:ellipsize="end"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:maxWidth="250dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dip"
                android:singleLine="true"
                android:textStyle="bold"
                android:textColor="#FF212121"
                android:textSize="17dp"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:id="@+id/teacher_common_header_sub_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/teacher_common_header_center_title"
                android:ellipsize="marquee"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:gravity="center"
                android:marqueeRepeatLimit="marquee_forever"
                android:paddingLeft="12dp"
                android:paddingRight="12dip"
                android:singleLine="true"
                android:textColor="#E7171717"
                android:textSize="11dp"
                android:visibility="gone"/>

        </RelativeLayout>

        <ImageView
            android:id="@+id/teacher_common_header_right_image"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"/>

        <TextView
            android:id="@+id/teacher_common_header_right_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:drawablePadding="5dip"
            android:paddingBottom="12dp"
            android:paddingLeft="12dp"
            android:paddingRight="20dp"
            android:paddingTop="12dp"
            android:textColor="#15A6EE"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/teacher_common_header_left_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:drawableLeft="@drawable/titlebar_back_selector"
            android:drawablePadding="5dip"
            android:padding="12dp"
            android:textColor="#ffffffff"
            android:textSize="16dp" />

        <View
            android:id="@+id/segment_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="#F5F6F7"/>
    </RelativeLayout>

</com.young.library.base.view.CommonHeaderView>