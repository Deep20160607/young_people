<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--clearEditText通用属性-->
    <style name="clear_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/text_msg_main_tone_color</item>
        <item name="android:textColorHint">@color/text_msg_hint_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textCursorDrawable">@drawable/et_cursor_drawable</item>
        <item name="android:background">@drawable/et_underline_selector</item>
    </style>

    <!--通用按钮样式1:蓝色无描边-->
    <style name="button_style_one">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/bg_circle_blue_selector</item>
    </style>

</resources>